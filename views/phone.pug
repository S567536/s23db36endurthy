extends layout

block content
  h1= title 
  -var result = results
    .container-fluid
        .row
            each item,index in result
                - let destination = `dispatch(\"/phone/update?id=${item._id}\")`
                .col-sm-2(onclick=`buy(${index})`)
                    p Phone_Name: #{item.Phone_Name}
                    p Phone_price: #{item.Phone_price}
                    p Phone_Storage:#{item.Phone_Storage}
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                
    script.
        function dispatch(path){
            window.location.href=path
        }

        function buy(index){
            alert(`you purchase item: ${index+1}`)
        }